{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext"],
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "plugins": [
      { "name": "tslint-language-service" },
      { "name": "typescript-snapshots-plugin" }
    ]
  },
  "exclude": ["node_modules", "example", "dist"]
}
